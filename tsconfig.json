{
  "compilerOptions": {
    "strict": true,
    // "strictNullChecks": true,
    // "strictBindCallApply": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@api/*": [
        "src/api/*"        
      ],
      "@cli/*": [
        "src/cli/*"        
      ],
      "@prompts/*": [
        "src/prompts/*"        
      ],
      "@shared/*": [
        "src/shared/*"        
      ],
      "@templates/*": [
        "src/templates/*"        
      ],
    },
  },
  "include": [
   "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
